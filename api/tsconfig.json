{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "Node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"ts-node": {
		"esm": true
	}
}
